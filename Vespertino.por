programa {
  cadeia letra
  funcao inicio() {
    escreva("Escreva 1 para Matutino, 2 para Vespertino ou 3 para Noturno \n")
    leia(letra)
    escolha(letra){
    caso: "M"
    escreva("Bom dia!")
    pare
    caso: "V"
    escreva("Boa tarde")
    pare
    caso: "N"
    escreva("Bom Noite!")
    pare
    caso contrario: 
    escreva ("Codigo Invalido")

  }


    
  }
}
